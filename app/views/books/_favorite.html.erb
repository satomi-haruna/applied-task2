<% if book.favorited_by?(current_user) %>
<!--<td>-->
  <%= link_to book_favorites_path(book), method: :delete, remote: true, :style=>"color:red" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<!--</td>-->
<% else %>
<!--<td>-->
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    ♡<%= book.favorites.count %>
  <% end %>
<!--</td>-->
<% end %>