<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--いいね機能-->
          <!--部分的に更新するためにidをつける-->
          <td id="favorite_buttons_<%= @book.id %>">
            <%= render "books/favorite", book: @book %>
          </td>
          <td>
            コメント数：<%= @book.book_comments.count %>
          </td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
        <!--コメント一覧 部分テンプレートへ変更-->
        <!--部分的に更新するためにidをつける-->
        <div id="comments">
          <%= render "book_comments/comment", book: @book %>
        </div>
      </table>
      <!--非同期通信のために、コメント投稿に対してもidをつけておいてみる-->
      <div class="form" id="new_comment">
        <!--form_withにlocal: trueをつけなければjsファイルを探しに行く＝非同期通信になる
        local: falseをつけるという説も？-->
        <%= form_with model:[@book,@book_comment], data: {remote: true} do |f| %>
          <%= f.text_area :comment, rows: "5", class: 'form-control book_comment' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>