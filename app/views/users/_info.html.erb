<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.follower.count %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= user.followed.count %></th>
  </tr>
</table>

<!--current_userならこっちを表示-->
<% if user == current_user %>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% else %>
<!--current_userじゃないならこっちを表示-->
<!--フォロー機能-->
  <% if current_user.following?(user) %>
  <div class='row'>
    <%= link_to unfollow_path(user.id), method: :post, class: "btn btn-info" do %>
      フォロー外す
    <% end %>
  </div>
  <% else %>
  <div class='row'>
    <%= link_to follow_path(user.id), method: :post, class: "btn btn-success" do %>
      フォローする
    <% end %>
  </div>
  <% end %>
<% end %>